@model IEnumerable<FPTBookstore.Models.Data.Publisher>

@{
    ViewBag.Title = "ShowListPublish";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Publisher Management</h2>

<p>
    @Html.ActionLink("Adding publisher", "AddPublish")
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                Publisher ID
            </th>
            <th>
                Publisher Name
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.PublisherID">
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublisherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdatePublish", new { id = item.PublisherID }) |
                    @Ajax.ActionLink("Delete", "DeletePublish", new { id = item.PublisherID }, new AjaxOptions
               {
                   Confirm = "Do you want to delete this publisher?",
                   OnComplete = "$('#row_" + @item.PublisherID + "').remove()",
                   HttpMethod = "Delete"
               })
                </td>
            </tr>
        }
    </tbody>

</table>
